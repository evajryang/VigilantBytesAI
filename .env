# VigilantBytes AI Configuration

# Application
APP_NAME=VigilantBytes AI
APP_VERSION=1.0.0
DEBUG=true

# Database
DATABASE_URL=sqlite:///./vigilantbytes.db
DATABASE_ECHO=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Security
SECRET_KEY=vigilantbytes-super-secret-key-change-in-production
